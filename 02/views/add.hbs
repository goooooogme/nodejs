<h1>Добавить  курс</h1>
<form action="/add" method="POST">
    <div class="input-field col s6">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Укажите цену"></span>
    </div>
    <div class="input-field col s6">
        <input id="price" name="price" type="number" class="validate" required>
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Укажите цену"></span>
    </div>
    <div class="input-field col s6">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Ссылка на изображение</label>
        <span class="helper-text" data-error="Вставьте ссылку"></span>
    </div>

    <button class="btn waves-effect waves-light" type="submit">Добавить</button>
</form>

