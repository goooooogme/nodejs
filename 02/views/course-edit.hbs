<h1>Редактировать {{course.title}}</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field col s6">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Укажите цену"></span>
    </div>
    <div class="input-field col s6">
        <input id="price" name="price" type="number" class="validate" required value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Укажите цену"></span>
    </div>
    <div class="input-field col s6">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Ссылка на изображение</label>
        <span class="helper-text" data-error="Вставьте ссылку"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn waves-effect waves-light" type="submit">Редактировать</button>
</form>

